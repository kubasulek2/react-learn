{
    "env": {
        "browser": true,
        "es6": true,
				"jquery": true
		},
		
    "extends": [
			"eslint:recommended",
			"plugin:react/recommended"
		],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
				"ecmaVersion": 2018,
				"sourceType": "module"
		},
		"parser": "babel-eslint",
    "rules": {
				"indent": [2, "tab"],
        "no-console": "off",
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            2,
            "always"
				],
				"no-undef": 0,
				"react/no-unescaped-entities": [
					"error",
					{
						"forbid": [
							">",
							"}"
						]
					}
				]
				
    }
}