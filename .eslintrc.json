{
    "env": {
        "browser": true,
        "es6": true,
				"node": true,
				"jquery": true
    },
    "extends": [
			"eslint:recommended",
			"plugin:react/recommended"
		],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
		},
		"parser": "babel-eslint",
    "parserOptions": {  
			"ecmaVersion": 2018,
			"sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
      "react/prop-types": 0,
			"indent": [
				2,
				"tab"
			],
			"no-console": 0,
			"linebreak-style": [
				"error",
				"unix"
			],
			"quotes": [
				"error",
				"single"
			],
			"semi": [
				2,
				"always"
			],
			"no-undef": 0,
			"react/no-unescaped-entities": [
				"error",
				{
					"forbid": [
						">",
						"}"
					]
				}
			]
    }
}